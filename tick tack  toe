def restarts():   
 choice=None
 Mark="O"
 user=1
 Block=["1","2","3","4","5","6","7","8","9"]     
 display(Block)    
 while(True):
    conditions(Block)
    if user == 1:
        choice=int(input(f"user {user} plz select from 1 to 9="))
        choice=choice-1
        user=0
        Block[choice]=Mark
        Mark="X"
        display(Block)    
    else:
        choice=int(input(f"user {user} plz select from 1 to 9="))
        choice=choice-1
        user=1
        Block[choice]=Mark
        Mark="O"
        display(Block)    
        
if __name__=="__main__":        
 restarts()        
