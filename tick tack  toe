import os
def display(block):
    print(         "     |          |")
    print(block[0],f"   |    {block[1]}     |   ",block[2])
    print("----------------------")
    print(         "     |          |")
    print(block[3],f"   |    {block[4]}     |   ",block[5])
    print("----------------------")
    print(         "     |          |")
    print(block[6],f"   |    {block[7]}     |   ",block[8])
    print()
    print()
    
def conditions(Block):
